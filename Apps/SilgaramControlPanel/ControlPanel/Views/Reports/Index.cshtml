
@{
    ViewBag.Title = Token.Reports;
    var priv = PageService.GetPageRole(PageEnumVM.Reports);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--body-->
@if (priv.IsDisplay)
{

    <div ng-app="ngApp" ng-controller="ctrlReports">
        <!--data-->
        <div class="">

            <!--Ad Information-->
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fas fa-bell"></i>@Token.Ad  @Token.Table
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="@Token.Collapse" title="@Token.Collapse"> </a>
                        <a class="reload" data-original-title="@Token.ReloadData" title="@Token.ReloadData" ng-click="CallFunctions()"> </a>
                        <a href="javascript:;" class="remove" data-original-title="@Token.Remove" title="@Token.Remove"> </a>
                    </div>
                </div>
                <!--Div Form Table-->
                <div class="portlet-body" style="display: block;">
                    <div class="table-scrollable">
                        <div class="form-group col-lg-12 col-md-12">
                            <!--Ad Id-->
                            <div class="col-lg-3 col-md-3">
                                <label>@Token.EnterAdId :</label>
                                <div class="input-group">
                                    <div class="input-icon">
                                        <input class="form-control" type="text" placeholder="@Token.EnterAdId" ng-model="AdId">
                                    </div>
                                    <span class="input-group-btn">
                                        <button class="btn btn-success" type="button" ng-click="getReports(AdId)">
                                            @Token.GetReports
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </span>
                                </div>

                            </div>
                        </div>

                        <!--Ad Table For Show Infromation-->
                        <table class="table table-bordered" ng-fop-data="Ads" ng-fop-data-repeat="AdsRepeat">
                            <thead>
                                <tr>
                                    <th class="text-center" colspan="6">@Token.Ad</th>
                                    <th class="text-center" colspan="3">@Token.CreateBy</th>
                                </tr>
                                <tr>
                                    <th class="th-15">@Token.Title</th>
                                    <th class="th-25">@Token.Description</th>
                                    <th class="th-10">@Token.Category</th>
                                    <th class="th-10">@Token.SubCategory</th>
                                    <th class="th-10">@Token.FavoritesCount</th>
                                    <th class="th-10">@Token.CreateDateTime</th>
                                    <th class="th-10">@Token.UserName</th>
                                    <th class="th-10">@Token.Email</th>
                                    <th class="th-10">@Token.Serial</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <!--Ad-->
                                    <td>{{AdInformation.Title}}</td>
                                    <td>
                                        <textarea class="form-control min-width-100-important input-redonly"
                                                  ng-model="AdInformation.Description" readonly></textarea>
                                    </td>
                                    <td>{{AdInformation.CategoryName}}</td>
                                    <td>{{AdInformation.SubCategoryName}}</td>
                                    <td>{{AdInformation.FavoritesCount}}</td>
                                    <td>{{AdInformation.CreateDateTime}}</td>
                                    <!--User -->
                                    <td>{{AdInformation.CreateBy.UserName}}</td>
                                    <td>{{AdInformation.CreateBy.Email}}</td>
                                    <td>{{AdInformation.CreateBy.Serial}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--Reports-->
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fas fa-bell"></i>@Token.Report  @Token.Table
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="@Token.Collapse" title="@Token.Collapse"> </a>
                        <a class="reload" data-original-title="@Token.ReloadData" title="@Token.ReloadData" ng-click="CallFunctions()"> </a>
                        <a href="javascript:;" class="remove" data-original-title="@Token.Remove" title="@Token.Remove"> </a>
                    </div>
                </div>
                <!--Div Form Table-->
                <div class="portlet-body" style="display: block;">
                    <div class="table-scrollable">
                        <!--Form Add New And Show And Edit-->
                        <form name="frmReport" novalidate ng-fop-data="Reports" ng-fop-data-repeat="ReportsRepeat">
                            <table class="table table-striped table-bordered table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th class="th-20">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.ReportType"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="ReportTypeName"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>
                                        <th class="th-20">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Description"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="Description"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>
                                        <th class="th-10">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Date"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="Date"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>
                                        <th class="th-10">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.FullName"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="FullName"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>
                                        <th class="th-10">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.UserName"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="UserName"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>
                                        <th class="th-10">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Serial"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="Serial"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>
                                        <th class="th-10">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="true"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.ImageProfile"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="ImageUrl"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>  
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                    <tr ng-repeat="x in ReportsRepeat">
                                        <td>{{x.ReportTypeName}}</td>
                                        <td>{{x.Description}}</td>
                                        <td>{{x.Date}}</td>
                                   
                                        <td title="@Token.UserReportsCount: {{x.UserReportsCount +'\n' }}@Token.UserReportsCountForThisAd: {{x.UserReportsCountForThisAd}}">{{x.FullName}}</td>
                                        <td>{{x.UserName}}</td>
                                        <td>{{x.Serial}}</td>
                                        <td><img alt=""  src="{{x.ImageUrl}}"/> </td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="7">
                                            <!--Paging-->
                                            <ng-paging-display-more ng-paging-count-item="50"></ng-paging-display-more>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>

                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>
}
else
{
    <h1 class="lableErorr text-center">
        <i class="fas fa-exclamation-triangle" aria-hidden="true"></i>
        @Token.CanNotDisplay
    </h1>
}



@section scripts{

    <script src="~/Scripts/Angular/Views/Reports/Service.js"></script>
    <script src="~/Scripts/Angular/Views/Reports/ControllerJs.js"></script>
}

