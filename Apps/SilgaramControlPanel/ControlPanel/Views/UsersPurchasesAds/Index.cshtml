
@{
    ViewBag.Title = Token.UsersPurchasesAds;
    var priv = PageService.GetPageRole(PageEnumVM.UsersPurchasesAds);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--body-->
@if (priv.IsDisplay)
{

    <div ng-app="ngApp" ng-controller="ctrlUsersPurchasesAds" >
        <!--data-->
        <div class="">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-bell-o"></i>@Token.UsersPurchasesAds  @Token.Table
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="@Token.Collapse" title="@Token.Collapse"> </a>
                        <a class="reload" data-original-title="@Token.ReloadData" title="@Token.ReloadData" ng-click="CallFunctions()"> </a>
                        <a href="javascript:;" class="remove" data-original-title="@Token.Remove" title="@Token.Remove"> </a>
                    </div>
                </div>
                <!--Div Form Table-->
                <div class="portlet-body" style="display: block;">
                    <div class="table-scrollable">
                        <div class="form-group col-lg-12 col-md-12">
                            <!--User Serial-->
                            <div class="col-lg-3 col-md-3">
                                        <label>@Token.EnterAdId :</label>
                                <div class="input-group">
                                    <div class="input-icon">
                                        <input  class="form-control" type="text" placeholder="@Token.EnterAdId" ng-model="AdId">
                                    </div>
                                    <span class="input-group-btn">
                                        <button   class="btn btn-success" type="button" ng-click="getUsersPurchasesAds(true)">
                                            @Token.GetUsersPurchases
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </span>
                                </div>
                                 
                            </div>
                        </div>
                        
                        <!--Form Add New And Show And Edit-->
                        <form name="frmUsersPurchasesAd" novalidate  ng-fop-data="UsersPurchasesAds"  ng-fop-data-repeat="UsersPurchasesAdRepeat">
                            <table class="table table-striped table-bordered table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th colspan="4"> 
                                        <center>
                                            <label>

                                                @Token.User
                                            </label>
                                        </center>
                                        </th>
                                        <th colspan="2">
                                                <center>
                                            <label>
                                                    @Token.Ad
                                            </label>
                                            </center>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th class="th-15">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="false"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.UserName"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="UserName"
                                                    ng-fop-type-filter="text"
                                                    ></ng-fop>
                                        </th>
                                        <th class="th-15">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="false"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Serial"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="Serial"
                                                    ng-fop-type-filter="text"
                                                     ></ng-fop>
                                        </th>
                                        <th class="th-15">
                                            <ng-fop ng-fop-filter="false"
                                                    ng-fop-order-by="false"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.ImageProfile"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="ImageUrl"
                                                     ></ng-fop>
                                        </th>
                                        <th class="th-15">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="false"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Price"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="SellingPrice"
                                                    ng-fop-type-filter="number"></ng-fop>
                                        </th>

                                        <th class="th-15">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="false"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.CurrentPrice"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="AdCurrentPrice"
                                                    ng-fop-type-filter="number"></ng-fop>
                                        </th>
                                        <th class="th-15">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="false"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Title"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="AdTitle"
                                                    ng-fop-type-filter="number"></ng-fop>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="x in UsersPurchasesAdRepeat">
                                        <td class="highlight">
                                            <label>{{x.UserName}}</label>
                                        </td>
                                        <td class="highlight">
                                            <label>{{x.Serial}}</label>
                                        </td>
                                        <td class="highlight">
                                            <img class="" src="{{x.UserImageUrl}}" width="100" height="100" />
                                        </td>
                                        <td class="hidden-xs">
                                            <label>{{x.SellingPrice|currency }}</label>
                                        </td>
                                        <td class="hidden-xs">
                                            <label>{{x.AdCurrentPrice|currency }}</label>
                                        </td>
                                        <td class="hidden-xs">
                                            <label>{{x.AdTitle }}</label>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="6">
                                            <!--Paging-->
                                            <ng-paging-display-more  ng-paging-count-item="50"></ng-paging-display-more>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>

                        </form>
                    </div>
                </div>
            </div>
            <!-- END SAMPLE TABLE PORTLET-->
        </div>
    </div>
}
else
{
    <h1 class="lableErorr text-center">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
        @Token.CanNotDisplay
    </h1>
}



        @section scripts{
         
              <script src="~/Scripts/Angular/Views/UsersPurchasesAds/Service.js"></script>
            <script src="~/Scripts/Angular/Views/UsersPurchasesAds/ControllerJs.js"></script> 
        }

