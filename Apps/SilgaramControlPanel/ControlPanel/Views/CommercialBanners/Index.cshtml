
@{
    ViewBag.Title = Token.CommercialBanners;
    ViewBag.Description = Token.ThisPageFor + Token.Display + " " + Token.CommercialBanners;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var priv = PageService.GetPageRole(PageEnumVM.CommercialBanners);
}

<!--body-->
@if (priv.IsDisplay)
{
    <div ng-app="ngApp" ng-controller="ctrlCommercialBanner">
        <div class="">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fas fa-bell"></i>@Token.CommercialBanners @Token.Table
                    </div>
                    <div class="tools">

                        <a href="javascript:;" class="collapse" data-original-title="@Token.Collapse" title="@Token.Collapse"> </a>
                        <a class="reload" id="getData" data-original-title="@Token.ReloadData" title="@Token.ReloadData" ng-click="CallFunctions(this)"> </a>
                        <a href="javascript:;" class="remove" data-original-title="@Token.Remove" title="@Token.Remove"> </a>
                    </div>
                </div>
                <!--Div Form Table-->
                <div class="portlet-body" style="display: block;">
                    <div class="table-scrollable">

                        <!--Form Add New And Show And Edit-->
                        <form name="frmCommercialBanner" novalidate ng-fop-data="CommercialBanner" ng-fop-data-repeat="CommercialBannerRepeat">
                            <table class="table table-striped table-bordered table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th class="th-25">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Name"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="Name"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>
                                        <th class="th-25">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Email"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="Email"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>
                                        <th class="th-25">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Phone"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="Mobile"
                                                    ng-fop-type-filter="text"></ng-fop>  
                                        </th>
                                        <th class="th-25">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Date"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="Date"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="x in CommercialBannerRepeat track by $index" ng-show="x.State!='Delete'">
                                    <tr>
                                        <td class="hidden-xs">
                                            <label>{{x.Name}}</label>
                                        </td>
                                        <td class="hidden-xs">
                                            <label>{{x.Email}}</label>
                                        </td>
                                        <td class="hidden-xs">
                                            <label>{{x.Phone}}</label>
                                        </td>
                                        <td class="hidden-xs">
                                            <label>{{x.Date}}</label>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="5">
                                            <!--Paging-->
                                            <ng-paging-display-more function-data="GetCommercialBanner"></ng-paging-display-more>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </form>

                    </div>

                </div>
            </div>
            <!-- END SAMPLE TABLE PORTLET-->

        </div>

        <!--Delete Undo-->
        <div class="col-lg-3 col-md-3" ng-show="false">
            <div class="caption">
                <i class="fas fa-bell"></i>@Token.Undo       @Token.Delete
            </div>
            <table class="table table-striped table-bordered table-advance table-hover">
                <thead>
                    <tr>
                        <th class="th-90">
                            <div class="icon-addon addon-sm">
                                <input type="text" class="form-control ng-pristine ng-valid ng-empty ng-touched" placeholder="@Token.Search..." ng-model="CommercialBannerName">
                                <label ng-show="CommercialBannerName.length==0||CommercialBannerName==null||CommercialBannerName==undefined" for="txt2" class="glyphicon glyphicon-search" rel="tooltip"></label>
                                <label ng-show="CommercialBannerName.length>0&amp;&amp;CommercialBannerName!=null" class="glyphicon glyphicon-remove-circle ng-hide" ng-click="CommercialBannerName=undefined"></label>
                            </div>
                        </th>
                        <th class="th-10">

                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="x in CommercialBanner|filter:{'CommercialBannerName':CommercialBannerName}" ng-show="x.State=='Delete'">
                        <td>{{x.CommercialBannerName}}</td>
                        <td><i class="fas fa-undo cursor-pointer icont-controller" title="@Token.Undo" data-placement="top" data-toggle="tooltip" ng-click="x.State=null"></i></td>
                    </tr>
                </tbody>
            </table>

        </div>
        <pre ng-show="false"> {{CommercialBanner|json}}</pre>
        <pre ng-show="false">{{CommercialBanner|json:4}}</pre>



        <!-- Delete Confirm -->
        <div class="modal fade " id="DeleteConfirm" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">@Token.DeleteConfirm</h4>
                    </div>
                    <div class="modal-body">
                        <p>@Token.AreYouSureDelete ?</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" ng-click="Delete( )">
                            @Token.YesDelete
                            <i class="fas fa-trash"></i>
                        </button>
                        <button class="btn btn-default" ng-click="CancelDelete( )">
                            @Token.Cancel
                            <i class="fas fa-undo"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>



}
else
{
    <h1 class="lableErorr text-center">
        <i class="fas fa-exclamation-triangle" aria-hidden="true"></i>
        @Token.CanNotDisplay
    </h1>
}

@section scripts{

    <script src="~/Scripts/Angular/Views/CommercialBanners/Service.js"></script>
    <script src="~/Scripts/Angular/Views/CommercialBanners/Controller.js"></script>



}

